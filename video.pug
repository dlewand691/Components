      a.text-white(href="#")
        h6.text-white cognizant digital works™
        h2.text-white.text-caps approach
        h1.small-m0
          a.text-white(data-toggle="video-modal-in-place-1 video-modal-in-place-2 video-modal-in-place-row")
            i.play-button
    .cell.p0.z1.hide#video-modal-in-place-2(data-toggler=".hide" style="height: inherit;")
