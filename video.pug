          button.close-button(data-close aria-label="Close modal" type="button")
            span(aria-hidden="true") &times;

  hr
  h3 Video1-C (Play in place)
  .grid-x.grid-padding-x.expanded.collapse.align-middle.align-center.text-center#video-modal-in-place-row(data-toggler=".gradient-overlay-black-full" style="background: url('https://source.unsplash.com/R3pUGn5YiTg') no-repeat; background-size: cover; background-position: center; min-height:400px;")
